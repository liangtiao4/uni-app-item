/* 按钮 */
.btn {
  width: 80px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 40px;
  padding: 6rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}
.btn-submit {
  background-color: #ff4925;
}
.btn-left {
  border-radius: 40rpx 0 0 40rpx;
  background-color: #ff8917;
  padding-left: 24rpx;
}
.btn-right {
  border-radius: 0 40rpx 40rpx 0;
  background-color: #ff4925;
  padding-right: 24rpx;
}
